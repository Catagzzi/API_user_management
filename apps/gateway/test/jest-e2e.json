{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@common(|/.*)$": "<rootDir>/common/$1",
    "^@config(|/.*)$": "<rootDir>/config/$1",
    "^@core(|/.*)$": "<rootDir>/core/$1"
  }
}
